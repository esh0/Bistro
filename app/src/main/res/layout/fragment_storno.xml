<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price_text"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/price_text"
        android:gravity="left"
        android:selectAllOnFocus="true"
        android:text="Wartość"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        tools:text="12.00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/storno_checkbox"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/guest_label"
        android:text="Storno"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <CheckBox
        android:id="@+id/storno_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/price_text"
        android:layout_alignRight="@id/price_text"
        android:layout_below="@id/price_text"
        android:gravity="center" />

</RelativeLayout>